# Local Development Environment Variables
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=local
DEBUG=true

# Security
SECRET_KEY=local-dev-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (Local SQLite)
DATABASE_URL=sqlite+aiosqlite:///./app.db
REDIS_URL=redis://localhost:6379/0

# CORS Origins (Local development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (Optional for local dev)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# SMS Configuration (Optional for local dev - Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# WebRTC Configuration (Local TURN server)
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=testuser
TURN_PASSWORD=testpass
STUN_SERVER_URL=stun:stun.l.google.com:19302

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads
RECORDINGS_DIR=recordings

# Meeting Configuration
MAX_PARTICIPANTS_PER_MEETING=100
MAX_MEETING_DURATION_HOURS=8
DEFAULT_MEETING_DURATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
PROMETHEUS_METRICS=true
LOG_LEVEL=INFO