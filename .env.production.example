# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Security (IMPORTANT: Change these in production)
SECRET_KEY=your-super-secure-secret-key-here-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (Production PostgreSQL)
DATABASE_URL=postgresql+asyncpg://videoapp_user:your_db_password@postgres:5432/videoapp_db
REDIS_URL=redis://:your_redis_password@redis:6379/0
POSTGRES_DB=videoapp_db
POSTGRES_USER=videoapp_user
POSTGRES_PASSWORD=your_db_password
REDIS_PASSWORD=your_redis_password

# CORS Origins (Production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Production SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@yourdomain.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SMS Configuration (Production Twilio)
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WebRTC Configuration (Production TURN servers)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=production_turn_user
TURN_PASSWORD=production_turn_password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Media Server (Production settings)
MEDIASOUP_ANNOUNCED_IP=your-server-public-ip

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB
UPLOAD_DIR=/app/uploads
RECORDINGS_DIR=/app/recordings

# Meeting Configuration
MAX_PARTICIPANTS_PER_MEETING=1000
MAX_MEETING_DURATION_HOURS=8
DEFAULT_MEETING_DURATION_MINUTES=60

# Rate Limiting (Stricter for production)
RATE_LIMIT_PER_MINUTE=30

# Monitoring
PROMETHEUS_METRICS=true
LOG_LEVEL=INFO
GRAFANA_PASSWORD=your-secure-grafana-password

# API URLs for frontend
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_WS_URL=wss://api.yourdomain.com